#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    srand(time(NULL));  // random num seed
    int random_num = (rand() % 100) + 1;//to 100

    int input;//users guess
    int attempts = 0;//attempts 0 at first

    printf("Guess a number between 1 and 100:\n");

    while (1) {  // Loop until correct
        printf("Enter your guess(number): ");
        
        if (scanf("%d", &input) != 1) {  // Check if input is valid
            printf("Invalid type of input!\n");
            while(getchar() != '\n');  // Clear buffer
            continue;
        }
        
        attempts++;

        if (input < random_num) {
            printf("Too low! Try again.\n");
        } else if (input > random_num) {
            printf("Too high! Try again.\n");
        } else {
            printf("Correct! You got it in %d attempts.\n", attempts);
            break;  // Exit loop
        }
    }

    return 0;
}
