#include <stdio.h>
#include <ctype.h>
#include <stdlib.h>
#include <string.h>
#include <stdbool.h>
#include <time.h>

#define MAX_WORD_LENGTH 50
#define MAX_TRIES 6

typedef struct {
    char word[MAX_WORD_LENGTH];
    char hint[MAX_WORD_LENGTH];
} WordAndHint;

void displayWord(const char *word, const bool guessed[]);
void drawHangman(int tries);
bool isWordGuessed(const char *word, const bool guessed[]);

int main() {
    srand(time(NULL));
    
    WordAndHint wordList[] = {
        {"shinigami", "Tall creature, One of the Grimes songs"},
        {"ultraviolence", "Lana Del Rey song"},
        {"beer", "One of the things Germany is well known for"},
        {"boucher", "Real last name of Grimes"},
        {"honey", "Bears love it in animations"}
    };
    
    int wordIndex = rand() % 5;
    const char *secretWord = wordList[wordIndex].word;
    const char *hint = wordList[wordIndex].hint;
    
    bool guessedLetters[26] = {false};
    int tries = 0;
    
    printf("Welcome to Hangman!\n");
    printf("Hint: %s\n", hint);
    
    while (tries < MAX_TRIES) {
        printf("\n");
        displayWord(secretWord, guessedLetters);
        drawHangman(tries);
        
        char guess;
        printf("Enter a letter: ");
        scanf(" %c", &guess);
        guess = tolower(guess);
        
        if (!isalpha(guess)) {
            printf("Please enter a valid letter.\n");
            continue;
        }
        
        if (guessedLetters[guess - 'a']) {
            printf("You've already guessed that letter. Try again.\n");
            continue;
        }
        
        guessedLetters[guess - 'a'] = true;
        
        bool found = false;
        for (int i = 0; secretWord[i] != '\0'; i++) {
            if (secretWord[i] == guess) {
                found = true;
                break;
            }
        }
        
        if (found) {
            printf("Good guess!\n");
        } else {
            printf("Sorry, the letter '%c' is not in the word.\n", guess);
            tries++;
        }
        
        if (isWordGuessed(secretWord, guessedLetters)) {
            printf("\nCongratulations! You've guessed the word: %s\n", secretWord);
            displayWord(secretWord, guessedLetters);
            return 0;
        }
    }
    
    printf("\nSorry, you've run out of tries. The word was: %s\n", secretWord);
    drawHangman(tries);
    
    return 0;
}

void displayWord(const char *word, const bool guessed[]) {
    printf("Word: ");
    for (int i = 0; word[i] != '\0'; i++) {
        if (guessed[word[i] - 'a']) {
            printf("%c ", word[i]);
        } else {
            printf("_ ");
        }
    }
    printf("\n");
}

void drawHangman(int tries) {
    const char *hangmanParts[] = {
        "     _________",
        "    |         |",
        "    |         O",
        "    |        /|\\",
        "    |        / \\",
        "    |"
    };
    
    printf("\n");
    for (int i = 0; i <= tries && i < 6; i++) {
        printf("%s\n", hangmanParts[i]);
    }
}

bool isWordGuessed(const char *word, const bool guessed[]) {
    for (int i = 0; word[i] != '\0'; i++) {
        if (!guessed[word[i] - 'a']) {
            return false;
        }
    }
    return true;
}
